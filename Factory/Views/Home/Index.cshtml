@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1>Welcome to the Sillystringz Factory</h1><br>

<h2>@Html.ActionLink("Machines", "index", "Machines")
    | @Html.ActionLink("Add New Machine", "Create", "Machines")</h2>

    @if (@Model.Count == 0)
    {
        <h2>No machines have been added yet!</h2>
    }

  <ul>
      @foreach(Machine machine in ViewBag.Machine)
      {
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</p>
      }
    </ul>  


    <h2>@Html.ActionLink("Engieers", "Index", "Engineers")
         | @Html.ActionLink("New Engineer", "Create", "Engineers")</h2>

         @if (@Model.Count == 0)
         {
            <h3>No Engieers have been added yet!</h3>
         }
           <ul>
      @foreach (Engineer engineer in ViewBag.Engineer)
      {
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</p>
      } 
    </ul> 
  
