@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h1 class="jumbotron">Edit</h1>

<h3>Edit This Engineer: @Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.LabelFor(model => model.Name)
    @Html.EditorFor(model => model.Name)

    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId")

    <input type="submit" value="Save" />
  }<br><br>
  <p class="btn btn-dark" id="link">@Html.ActionLink("Back to list of Engineers", "Index")</p>

}