@{
    Layout = "_Layout";
}

@using Factory.Models;

<h1 class="jumbotron"><u>List Of Engineers</u></h1>

@if(@Model.Count == 0)
{
    <h3> No Engineers have been added yet!</h3>
}
else
{
    <ul>
        @foreach (Engineer engineer in Model)
        {
            <li class="engineer">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId})</li>
        }

    </ul>
}

     <p class="btn btn-dark" id="link">@Html.ActionLink("Add new Engineer", "Create")</p><br>
   