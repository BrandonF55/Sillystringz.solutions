@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1 class="jumbotron"><u>Add Engineer to this Machine</u></h1>

<h4>Add a Engineer to this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")
      <br>
    <input type="submit" value="Save" class="btn btn-danger"/>
}